<h2>Modifier mon profil</h2>
<div class="container justify-content-center d-flex align-items-center">
<div class= "sign-form p-4">

  <div class="form-inputs">
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>



      <%= simple_form_for(resource, as: resource_name, url: user_path(current_user), method: :patch) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
      <%= f.input :fullname,
                    label: false,
                    placeholder: 'Nom complet',
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "fullname" }%>
      <%= f.input :description,
                    label: false,
                    placeholder: 'Décrivez-vous',
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "Description" }%>
        <%= f.input :photo, as: :file %>
        <%= f.submit "Mettre à jour", class: "btn btn-ghost" %>

      </div>

      <div class="form-actions">
      </div>
    <% end %>

  </div>

</div>
</div>
